<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="{{ asset('assets/css/simplex_bootstrap.min.css') }}">
		{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">  #}
		{# <link rel="stylesheet" href="https://bootswatch.com/5/simplex/bootstrap.min.css"> #}{% block stylesheets %}
		{% endblock %}

			{% block javascripts %}
				{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	{% endblock %}
	</head>
		<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark"> <div class="container-fluid">
			<a class="navbar-brand" href="{{ path('app_home_page') }}">Mon Blog</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarColor02">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link active" href="{{ path('app_post') }}">Liste des article
							<span class="visually-hidden">(current)</span>
						</a>
					</li>

					{% if not (app.user) %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Register</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Login</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_post_create') }}">Create a Post</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
	<body>
		{% block content %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
